<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/border"
            android:id="@+id/categoria_nav_img"
            android:scaleType="centerCrop"
            android:src="@drawable/fruta"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:scaleX=".7"
            android:scaleY=".7"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/nav_categoria_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Nombre:"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="21sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/precio_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Precio Producto"
                android:textColor="@color/purple_500"
                android:textSize="19sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/restar_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menos"
                    android:layout_marginLeft="6dp"
                    />


                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/roboto"
                    android:text="1"
                    android:layout_margin="4dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/aÃ±adir_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mas" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comprar_ahoraNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_bg_detalle"
                android:fontFamily="@font/roboto"
                android:text="Comprar Ahora"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="end"
                />



        </LinearLayout>



    </LinearLayout>




</androidx.cardview.widget.CardView>